{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server (.NET)",
      "type": "coreclr",
      "request": "launch",
      "project": "server/server.csproj",
      "launchSettingsProfile": "https",
      "cwd": "${workspaceFolder}/server",
        "env": {
          "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000",
          "ASPNETCORE_ENVIRONMENT": "Development",
          "Smtp__Pass": "${env:Smtp__Pass}",
          "Storage__AzureFiles__ConnectionString": "${env:IDSFORMS_AZUREFILES_CONN}"
        },
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "serverReadyAction": { "action": "none" }   // don't auto-open Swagger
    },
    {
      "name": "UI (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173/login",
      "webRoot": "${workspaceFolder}/ui",
      "preLaunchTask": "ui:dev"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": ["Server (.NET)", "UI (Chrome)"],
      "stopAll": true
    }
  ]
}
