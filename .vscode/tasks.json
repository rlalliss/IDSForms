{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui:dev",
      "type": "npm",
      "script": "dev",
      "path": "ui",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "vite",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 0
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "vite v\\d+",
            "endsPattern": "Local:\\s*http://localhost:5173"
          }
        }
      ]
    },
    {
      "label": "server:watch",
      "type": "process",
      "command": "dotnet",
      "args": ["watch", "run"],
      "options": {
        "cwd": "${workspaceFolder}/server",
        "env": {
          "ASPNETCORE_URLS": "http://localhost:5000"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "dotnet",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 0
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "dotnet watch",
          "endsPattern": "Now listening on: http://localhost:5000"
        }
      }
    }
  ]
}
