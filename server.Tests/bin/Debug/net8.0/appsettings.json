{
  "$schema": null,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Host=<server>.postgres.database.azure.com;Database=<db>;Username=<user>@<server>;Password=<pass>;Ssl Mode=Require;Trust Server Certificate=true"
  },
  "Storage": {
    "Mode": "Azure",
    "Azure": {
      "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=<name>;AccountKey=<key>;EndpointSuffix=core.windows.net"
    }
  },
  "Smtp": {
    "Host": "smtp.sendgrid.net",
    "Port": 587,
    "UseSsl": false,
    "User": "apikey",
    "Pass": "<YOUR_KEY>",
    "FromName": "Forms Bot",
    "FromEmail": "forms@yourdomain.com"
  },
  "Cors": { "Origin": "http://localhost:5173" },  
  "Jwt": { "Key": "dev-secret", "Issuer": "PdfApp", "Audience": "PdfApp" } 
}
